	<!-- Colorbox -->
	<link rel="stylesheet" href="~/constra/plugins/colorbox/colorbox.css">
	<!-- Template styles-->
	<link rel="stylesheet" href="~/constra/css/style.css">

</head>
<body>
	<div class="body-inner">

		@Html.Action("TopBar","Ana")
