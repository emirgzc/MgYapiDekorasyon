
@{
	ViewBag.Title = "_AnaLayout";
}

<!DOCTYPE html>
<html lang="tr">
<head>

	<!-- Basic Page Needs
	================================================== -->
	<meta charset="utf-8">
	<title>MG Yapı ve Dekorasyon</title>

	<!-- Mobile Specific Metas
	================================================== -->
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="MG Yapı ve Dekorasyon">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">

	<!-- Favicon
	================================================== -->
	<link rel="icon" type="image/png" href="~/constra/images/arkasiz2.png">

	<!-- CSS
	================================================== -->
	<!-- Bootstrap -->
	<link rel="stylesheet" href="~/constra/plugins/bootstrap/bootstrap.min.css">
	<!-- FontAwesome -->
	<link rel="stylesheet" href="~/constra/plugins/fontawesome/css/all.min.css">
	<!-- Animation -->
	<link rel="stylesheet" href="~/constra/plugins/animate-css/animate.css">
	<!-- slick Carousel -->
	<link rel="stylesheet" href="~/constra/plugins/slick/slick.css">
