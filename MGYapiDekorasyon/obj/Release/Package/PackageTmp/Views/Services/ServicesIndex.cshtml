
@model IEnumerable<EntityLayer.Concrete.Services>

@{
	ViewBag.Title = "ServicesIndex";
	Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<div id="banner-area" class="banner-area" style="background-image: url(/constra/images/mehmet/icerik4.jpeg)">
	<div class="banner-text">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="banner-heading">
						<h1 class="banner-title">Hizmetlerimiz</h1>
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb justify-content-center">
								<li class="breadcrumb-item"><a href="/Ana/Index/">Anasayfa</a></li>
								<li class="breadcrumb-item active">Hizmetlerimiz</li>
							</ol>
						</nav>
					</div>
				</div><!-- Col end -->
			</div><!-- Row end -->
		</div><!-- Container end -->
	</div><!-- Banner text end -->
</div><!-- Banner area end -->

<section id="main-container" class="main-container pb-2">
	<div class="container">
		<div class="row">

			@foreach (var item in Model)
			{
				<div class="col-lg-4 col-md-6 mb-5">
					<div class="ts-service-box">
						<div class="ts-service-image-wrapper">
							<img loading="lazy" class="w-100" src="@item.ServiceImage" 
								 alt="service-image" style="width: 100%; height: 250px; object-fit: cover;">
						</div>
						<div class="d-flex">
							<div class="ts-service-box-img">
								<img loading="lazy" src="~/constra/images/icon-image/service-icon1.png" alt="service-icon">
							</div>
							<div class="ts-service-info">
								<h3 class="service-box-title"><a href="/Services/ServicesDetails/@item.ServicesId">@item.ServiceTitle</a></h3>
								@*<p>@item.ServiceDesc.Substring(0, 100)</p>*@
								<a class="learn-more d-inline-block" href="/Services/ServicesDetails/@item.ServicesId" aria-label="service-details"><i class="fa fa-caret-right"></i> Devamını Oku</a>
							</div>
						</div>
					</div><!-- Service1 end -->
				</div>

			}

		</div><!-- Main row end -->
	</div><!-- Conatiner end -->
</section><!-- Main container end -->

@Html.Action("Footer", "Ana")