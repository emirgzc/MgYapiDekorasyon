
@model IEnumerable<EntityLayer.Concrete.Services>

@{
	ViewBag.Title = "ServicesDetails";
	Layout = "~/Views/Shared/_AnaLayout.cshtml";
}

<div id="banner-area" class="banner-area" style="background-image: url(/constra/images/mehmet/icerik4.jpeg)">
	<div class="banner-text">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="banner-heading">
						@foreach (var item in Model)
						{
							<h1 class="banner-title">@item.ServiceTitle</h1>
							<nav aria-label="breadcrumb">
								<ol class="breadcrumb justify-content-center">
									<li class="breadcrumb-item"><a href="/Ana/Index/">Anasayfa</a></li>
									<li class="breadcrumb-item active">Hizmetlerimiz</li>
								</ol>
							</nav>
						}
					</div>
				</div><!-- Col end -->
			</div><!-- Row end -->
		</div><!-- Container end -->
	</div><!-- Banner text end -->
</div><!-- Banner area end -->

<section id="main-container" class="main-container">
	<div class="container">
		<div class="row">

			<div class="col-xl-3 col-lg-4">
				<div class="sidebar sidebar-left">
					<div class="widget">
						<h3 class="widget-title">Hizmetlerimiz</h3>
						<ul class="nav service-menu">
							@Html.Action("ServicesTitleList","Services")
						</ul>
					</div><!-- Widget end -->

				</div><!-- Sidebar end -->
			</div><!-- Sidebar Col end -->

			<div class="col-xl-8 col-lg-8">
				<div class="content-inner-page">

					@foreach (var item in Model)
					{
						<h2 class="column-title mrt-0">@item.ServiceTitle</h2>

						<div class="row">
							<div class="col-md-12">
								<p>@item.ServiceDesc</p>
							</div><!-- col end -->
						</div><!-- 1st row end-->

						<div id="page-slider" class="page-slider">
							<div class="item">
								<img loading="lazy" class="img-fluid" src="@item.ServiceImage" 
									 alt="project-slider-image" style="width: 100%; height: 600px; object-fit: cover;"/>
							</div>
						</div>
					}

				</div><!-- Content inner end -->
			</div><!-- Content Col end -->


		</div><!-- Main row end -->
	</div><!-- Conatiner end -->
</section><!-- Main container end -->

@Html.Action("Footer", "Ana")